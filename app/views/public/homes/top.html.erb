<h1>新着商品</h1>
<% @items.each do |item| %>
<div>
  <%= link_to item_path(item.id) do %>
  <%= image_tag item.get_image %>
  <% end %>
  <p>商品名：<%= item.name %></p>
  <p>¥<%= item.add_tax_price.to_s(:delimited) %></p>
<% end %>