<div class="container">
  <div class="row justify-content-start">
    <h3>注文履歴一覧</h3>
  </div>
  <div class="row">
      <table class= "table table-bordered">
        <thead>
          <tr>
            <th style="width: 10%">注文日</th>
            <th style="width: 40%">配送先</th>
            <th style="width: 15%">注文商品</th>
            <th style="width: 10%">支払金額</th>
            <th style="width: 10%">ステータス</th>
            <th style="width: 10%">注文詳細</th>
          </tr>
        </thead>
        <tbody>
          <% @orders.each do |order| %>
            <tr>
              <td><%= order.created_at.strftime('%Y/%m/%d') %></td>
              <td><%= order.address %></td>
              <td><% order.order_details.each do |order_detail| %>
                  <%= order_detail.item.name %><br>
                  <% end %>
              </td>
              <td><%= (order.postage + order.total_payment).to_s(:delimited) %></td>
              <td><%= order.status_i18n %></td>
              <td><%= link_to "表示する", order_path(order.id), class: "btn btn-sm btn-primary" %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
  </div>
</div>