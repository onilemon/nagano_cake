<h1>注文情報入力画面</h1>
<h3>支払方法</h3>
<%= form_with model: @order do |f| %>
  <%= f.radio_button :payment_method, Order.payment_methods.key(0) %>
  <%= f.label :payment_method, Order.payment_methods_i18n[:credit_card] %>

  <%= f.radio_button :payment_method, Order.payment_methods.key(1) %>
  <%= f.label :payment_method, Order.payment_methods_i18n[:transfer]%>

  <h3>お届け先</h3>

  <%= f.radio_button :address, "1" %>
  <%= f.label :address, "ご自身の住所", value: 1 %>
  <%= current_customer.address %>

  <%= f.radio_button :address, "2" %>
  <%= f.label :address, "登録済み住所から選択", value: 2 %>
  <%= f.select :address_id, options_from_collection_for_select(Address.all, :id, :address_display) %>

  <%= f.radio_button :address, "3" %>
  <%= f.label :address, "新しいお届け先", value: 3 %>
  <div class="field">
  <%= f.label :postal_code, "郵便番号(ハイフンなし）" %><br>
  <%= f.text_field :postal_code %>
  </div>

  <div class="field">
  <%= f.label :address, "住所" %><br>
  <%= f.text_field :address %>
  </div>

  <div class="field">
  <%= f.label :name, "宛名" %><br>
  <%= f.text_field :name %>
  </div>

  <div class="actions">
    <%= f.submit "確認画面へ進む" %>
  </div>
<% end %>