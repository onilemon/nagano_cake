<div class="container">
  <div class="row justify-content-start">
    <h3>配送先編集</h3>
  </div>
  <div class="row">
    <%= form_with model: @address do |f| %>
      <table>
        <tr>
          <td>郵便番号(ハイフンなし)</td>
          <td><%= f.text_field :postal_code, class: "ml-3 mb-3" %></td>
        </tr>
        <tr>
          <td>住所</td>
          <td><%= f.text_field :address, size: "40" ,class: "ml-3 mb-3" %></td>
        </tr>
        <tr>
          <td>宛名</td>
          <td><%= f.text_field :name, class: "mx-3" %><%= f.submit "変更内容を保存", class: "btn btn-sm btn-success" %></td>
        </tr>
      </table>
    <% end %>
</div>
