<div class="container">
  <div class="row justify-content-start">
    <h3>配送先登録/一覧</h3>
  </div>
  <div class="row">
    <%= form_with model: @address do |f| %>
      <table>
        <tr>
          <td>郵便番号(ハイフンなし)</td>
          <td><%= f.text_field :postal_code, class: "ml-3 mb-3" %></td>
          <%= f.hidden_field :customer_id, :value => current_customer.id %>
        </tr>
        <tr>
          <td>住所</td>
          <td><%= f.text_field :address, class: "ml-3 mb-3", size: "40" %></td>
        </tr>
        <tr>
          <td>宛名</td>
          <td><%= f.text_field :name, class: "ml-3 mr-5 mb-5" %> <%= f.submit "新規登録", class: "btn btn-sm btn-success" %></td>
        </tr>
      </table>
    <% end %>
  </div>
  <div class="row">
    <table class= "table table-bordered">
      <% @addresses.each do |address| %>
        <thead>
          <tr>
            <th>郵便番号</th>
            <th>住所</th>
            <th>宛名</th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <tr>
            <td><%= address.postal_code %></td>
            <td><%= address.address %></td>
            <td><%= address.name %></td>
            <td><%= link_to "編集する", edit_address_path(address.id), class: "btn btn-sm btn-success mx-3" %><%= link_to "削除する", address_path(address.id), method: :delete, "data-confirm" => "本当に削除しますか？", class: "btn btn-sm btn-danger" %></td>
          </tr>
        </tbody>
    <% end %>
  </div>
</div>