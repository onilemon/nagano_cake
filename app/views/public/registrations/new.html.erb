<div class="container-fluid">
  <h3>新規会員登録</h3>
    <div class="row justify-content-center">
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= render "public/shared/error_messages", resource: resource %>
          <table>
            <tr>
              <td>名前</td>
              <td>(姓)　<%= f.text_field :last_name %>(名)　<%= f.text_field :first_name, class: "mb-3" %></td>
            </tr>
            <tr>
              <td>フリガナ</td>
              <td>(セイ)<%= f.text_field :last_name_kana %>(メイ)<%= f.text_field :first_name_kana, class: "mb-3" %></td>
            </tr>
            <tr>
              <td>メールアドレス</td>
              <td><%= f.email_field :email, autofocus: true, autocomplete: "email", class: "mb-3" %></td>
            </tr>
            <tr>
              <td>郵便番号(ハイフンなし)</td>
              <td><%= f.text_field :postal_code, class: "mb-3" %></td>
            </tr>
            <tr>
              <td>住所</td>
              <td colspan="2"><%= f.text_field :address, :size=>"60", class: "mb-3" %></td>
            </tr>
            <tr>
              <td>電話番号(ハイフンなし)</td>
              <td><%= f.text_field :telephone_number, class: "mb-3" %></td>
            </tr>
            <tr>
              <td>パスワード(６文字以上)</td>
              <td><%= f.password_field :password, autocomplete: "new-password", class: "mb-3" %></td>
            </tr>
            <tr>
              <td>パスワード（確認用）</td>
              <td><%= f.password_field :password_confirmation, autocomplete: "new-password", class: "mb-3" %></td>
            </tr>
            <tr>
              <td></td>
              <td><%= f.submit "新規登録", class:"btn btn-success" %></td>
            </tr>
          </table>
      <% end %>
    </div>
    <h3>既に登録済みの方</h3>
    <%= render "public/shared/links" %> からログインしてください
</div>
