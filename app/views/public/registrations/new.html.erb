<h2>新規会員登録</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "public/shared/error_messages", resource: resource %>
  <div class="field">
  <%= f.label :last_name, "姓" %><br>
  <%= f.text_field :last_name %>
  </div>

  <div class="field">
  <%= f.label :first_name, "名" %><br>
  <%= f.text_field :first_name %>
  </div>

  <div class="field">
  <%= f.label :last_name_kana, "姓カナ" %><br>
  <%= f.text_field :last_name_kana %>
  </div>

  <div class="field">
  <%= f.label :first_name_kana, "名カナ" %><br>
  <%= f.text_field :first_name_kana %>
  </div>

  <div class="field">
    <%= f.label :email, "メールアドレス" %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="field">
  <%= f.label :postal_code, "郵便番号(ハイフンなし)" %><br>
  <%= f.text_field :postal_code %>
  </div>

  <div class="field">
  <%= f.label :address, "住所" %><br>
  <%= f.text_field :address %>
  </div>

  <div class="field">
  <%= f.label :telephone_number, "電話番号(ハイフンなし)" %><br>
  <%= f.text_field :telephone_number %>
  </div>

  <div class="field">
    <%= f.label :password, "パスワード(６文字以上)" %><br />
    <%= f.password_field :password, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation, "パスワード（確認用）" %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <div class="actions">
    <%= f.submit "新規登録" %>
  </div>
<% end %>

<h2>既に登録済みの方</h2>
<%= render "public/shared/links" %> からログインしてください
