<div class="container">
  <h3>ジャンル一覧・追加</h3>
  <div class="row my-5">
    <%= form_with model: @genre, url: admin_genres_path do |f| %>
      <table cellpadding="15">
        <thead>
          <tr>
            <th>ジャンル名</th>
            <th><%= f.text_field :name %></th>
            <th><%= f.submit '新規登録', class: "btn btn-success" %></th>
          </tr>
        </thead>
      </table>
    <% end %>
      <table class= "table">
        <thead>
          <tr>
            <td>ジャンル</td>
            <% @genres.each do |genre| %>
          </tr>
        </thead>
        <tbody>
          <tr>
            <td><%= genre.name %></td>
            <td><%= link_to '編集する', edit_admin_genre_path(genre.id), class: "btn btn-success" %></td>
            <% end %>
          </tr>
        </tbody>
      </table>
  </div>
</div>