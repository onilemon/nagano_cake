<h1>注文履歴一覧</h1>
<% @orders.each do |order| %>
<div>
  <% total = 0 %>
  <% order.order_details.each do |order_detail| %>
  <% total += order_detail.amount %>
  <% end %>
  <p>購入日時：<%= link_to order.created_at.strftime('%Y/%m/%d'), admin_order_path(order.id) %></p>
  <p>購入者：<%= order.customer.last_name + order.customer.first_name %></p>
  <p>注文個数：<%= total %></p>
  <p>注文ステータス : <%= order.status_i18n %></p>
</div>
<% end %>