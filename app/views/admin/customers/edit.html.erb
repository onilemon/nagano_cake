<div class="container">
  <div class="row justify-content-start">
    <h3><%= @customer.last_name + @customer.first_name %>さんの会員情報編集</h3>
  </div>
  <div class= "row">
    <div class= "col">
    <%= form_with model:@customer, url:admin_customer_path(@customer.id) do |f| %>
      <table class= "table">
        <tr>
          <td>会員ID</td>
          <td><%= @customer.id %></td>
        </tr>
        <tr>
          <td>氏名</td>
          <td><%= f.text_field :last_name %></td>
          <td><%= f.text_field :first_name %></td>
        </tr>
        <tr>
          <td>フリガナ</td>
          <th><%= f.text_field :last_name_kana %></th>
          <th><%= f.text_field :first_name_kana %></th>
        </tr>
        <tr>
          <td>郵便番号</td>
          <td><%= f.text_field :postal_code %></td>
        </tr>
        <tr>
          <td>住所</td>
          <td><%= f.text_field :address, size: 40 %></td>
        </tr>
        <tr>
          <td>電話番号</td>
          <td><%= f.text_field :telephone_number %></td>
        </tr>
        <tr>
          <td>メールアドレス</td>
          <td><%= f.email_field :email, autofocus: true, autocomplete: "email" %></td>
        </tr>
        <tr>
          <td>会員ステータス</td>
          <td>
              <%= f.radio_button :is_deleted, 'false' %>
              <%= f.label :is_deleted, '有効' %>
              <%= f.radio_button :is_deleted, 'true' %>
              <%= f.label :is_deleted, '退会' %>
          </td>
        </tr>
        <tr>
          <td></td>
          <td><%= f.submit "変更を保存", class: "btn btn-success" %></td>
        </tr>
      </table>
    <% end %>
    </div>
  </div>
</div>