<div class="container">
  <h3>商品新規登録</h3>
    <div class="row justify-content-center">
      <%= form_with model: @item, url: admin_items_path do |f| %>
        <div class="row">
          <label class="col-5">商品画像</label>
          <div class="col-7 mb-3">
          <%= f.file_field :image, accept: "image/*" %>
          </div>
        </div>
        <div class="row">
         <label class="col-5">商品名</label>
         <div class="col-7 mb-3">
          <%= f.text_field :name %>
         </div>
        </div>
        <div class="row">
         <label class="col-5">商品説明</label>
         <div class="col-7 mb-3">
          <%= f.text_area :introduction, class: 'form-control',size: "5x5" %>
         </div>
        </div>
        <div class="row">
         <label class="col-5">ジャンル</label>
         <div class="col-7 mb-3">
           <%= f.collection_select :genre_id, Genre.all, :id, :name, include_blank: "選択して下さい" %>
         </div>
        </div>
        <div class="row">
         <label class="col-5">税抜き価格</label>
         <div class="col-7 mb-3">
          <%= f.text_field :price %>円
         </div>
        </div>
        <div class="row">
         <label class="col-5">販売ステータス</label>
         <div class="col-7 mb-3">
          <%= f.label :is_active, '販売中' %>
          <%= f.radio_button :is_active, 'false' %>

          <%= f.label :is_active, '販売停止中' %>
          <%= f.radio_button :is_active, 'true' %>
         </div>
        </div>
        <div class="row">
          <label class="col-5"></label>
          <div class="col justify-content-center">
          <%= f.submit '新規登録', class: "btn btn-success" %>
          </div>
        </div>
      <% end %>