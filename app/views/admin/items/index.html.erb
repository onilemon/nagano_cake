<div class="container">
  <h3>商品一覧</h3>
    <div class="row justify-content-end">
      <%= link_to new_admin_item_path, class: 'nav-link text-light' do %>
      <button type="button" class="btn btn-primary rounded-circle p-0" style="width:2rem;height:2rem;">＋</button>
      <% end %>
    </div>
  <div class="row justify-content-center">
    <table class="table">
      <thead>
        <tr>
          <th>商品ID</th>
          <th>商品名</th>
          <th>税抜き価格</th>
          <th>ジャンル</th>
          <th>ステータス</th>
        </tr>
      </thead>
        <% @items.each do |item| %>
          <tbody>
            <tr>
              <td><%= item.id %></td>
              <td><%= link_to item.name, admin_item_path(item.id) %></td>
              <td><%= item.price.to_s(:delimited) %></td>
              <td><%= item.genre.name %></td>
              <td><% if item.is_active? %>
                    <p class="text-secondary">販売停止中</p>
                  <% else %>
                    <p class="text-success">販売中</p>
                  <% end %>
              </td>
            </tr>
          </tbody>
        <% end %>
    </table>
    <%= paginate @items %>
  </div>


