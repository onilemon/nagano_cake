<div class= "container">
  <h3>商品詳細</h3>
    <div class= "row justify-content-center">
      <div class= "col-md-4">
      <%= image_tag @item.get_image %>
      </div>
      <div class= "col-md-6">
        <table class="table">
          <tr>
            <td>商品名</td>
            <td><%= @item.name %></td>
          </tr>
          <tr>
            <td>商品説明</td>
            <td><%= @item.introduction %></td>
          </tr>
          <tr>
            <td>ジャンル</td>
            <td><%= @item.genre.name %></td>
          </tr>
          <tr>
            <td>税込価格 <br>(税抜き価格)</td>
            <td><%= @item.add_tax_price.to_s(:delimited) %> (<%= @item.price.to_s(:delimited) %>) 円</td>
          </tr>
          <tr>
            <td>販売ステータス</td>
            <td><% if @item.is_active? %>
                  <p class="text-secondary">販売停止中</p>
                <% else %>
                  <p class="text-success">販売中</p>
                <% end %>
            </td>
          </tr>
        </table>
          <%= link_to '編集する', edit_admin_item_path(@item.id), class: "btn btn-success" %>
      </div>
    </div>
</div>